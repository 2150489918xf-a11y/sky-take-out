.auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx 40rpx;
  background: #f6f6f6;
  min-height: 100vh;
}
.auth-header {
  text-align: center;
  margin-bottom: 60rpx;
}
.auth-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}
.auth-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}
.auth-form {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}
.auth-avatar-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  border-bottom: 1px solid #f0f0f0;
}
.auth-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.auth-avatar-btn {
  display: flex;
  align-items: center;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}
.auth-avatar-btn::after {
  border: none;
}
.auth-avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
}
.auth-avatar-tip {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
}
.auth-nickname-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
}
.auth-nickname-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}
.auth-confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffc200;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  margin-bottom: 30rpx;
}
.auth-confirm-btn::after {
  border: none;
}
.auth-skip {
  padding: 20rpx;
}
.auth-skip-text {
  font-size: 28rpx;
  color: #999;
}
